{
    "autoload": {
        "psr-4": {
            "esnerda\\XML2CsvProcessor\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "esnerda\\XML2CsvProcessor\\Tests\\": "tests/phpunit/"
        }
    },
    "name": "esnerda/XML2CsvProcessor",
    "require": {
        "PHP": "^7.1",
        "keboola/php-component": "^4.1",
        "keboola/json-parser": "^2.1",
        "keboola/csvmap": "^0.5"
    },
    "require-dev": {
        "keboola/coding-standard": "^4.0",
        "keboola/php-temp": "^1.0",
        "phpstan/phpstan-shim": "^0.9.2",
        "phpunit/phpunit": "^7.0",
        "symfony/process": "^4.0",
        "keboola/datadir-tests": "^1.0"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "tests-phpunit": "phpunit",
        "tests-datadir": "datadir-tests",
        "tests": [
            "@tests-phpunit",
            "@tests-datadir"
        ],

        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]
    }
}